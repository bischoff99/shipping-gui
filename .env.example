# Example Environment Configuration for Shipping GUI
# Copy this file to .env.staging or .env.production and fill in actual values

# Flask Configuration
FLASK_ENV=production
FLASK_SECRET_KEY=your-super-secret-key-change-this-in-production
DEBUG=false

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/shipping_gui
POSTGRES_PASSWORD=your-postgres-password

# Redis Configuration
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=your-redis-password

# External API Keys
VEEQO_API_KEY=your-veeqo-api-key
VEEQO_API_URL=https://api.veeqo.com

EASYSHIP_API_KEY=your-easyship-api-key
EASYSHIP_API_URL=https://api.easyship.com

# Hugging Face (Optional for AI features)
HF_TOKEN=your-huggingface-token

# Internal API Security
INTERNAL_API_KEY=your-internal-api-key-for-service-to-service-calls
CLIENT_API_KEYS=client-key-1,client-key-2,client-key-3

# Logging Configuration
LOG_LEVEL=INFO
LOG_TO_STDOUT=true
LOG_FILE=/app/logs/app.log

# Application Settings
MAX_CONTENT_LENGTH=16777216
UPLOAD_FOLDER=/app/uploads

# External API Settings
API_TIMEOUT=30
API_MAX_RETRIES=3
API_BACKOFF_FACTOR=0.3

# Rate Limiting
RATELIMIT_DEFAULT=100 per hour
RATELIMIT_HEADERS_ENABLED=true

# Monitoring & Health Checks
METRICS_ENABLED=true
HEALTH_CHECK_ENABLED=true

# Production Server Settings
GUNICORN_WORKERS=4
GUNICORN_LOG_LEVEL=info
PORT=5000

# Security Settings
WTF_CSRF_ENABLED=true
SESSION_COOKIE_SECURE=true
SESSION_COOKIE_HTTPONLY=true

# SSL/TLS (for production)
SSL_KEYFILE=/etc/nginx/ssl/key.pem
SSL_CERTFILE=/etc/nginx/ssl/cert.pem

# Docker Registry (for CI/CD)
DOCKER_REGISTRY=ghcr.io/your-username

# CORS Settings
CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Slack Notifications (Optional)
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK