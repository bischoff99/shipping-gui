# Production Environment Variables Template
# Copy this to .env and fill in your actual API keys

# Flask Configuration
FLASK_SECRET_KEY=your_super_secret_key_change_this_in_production
FLASK_ENV=production
PORT=5000

# Veeqo API Configuration
VEEQO_API_KEY=your_veeqo_api_key_here
VEEQO_BASE_URL=https://api.veeqo.com

# Easyship API Configuration
EASYSHIP_API_KEY=your_easyship_api_key_here
EASYSHIP_BASE_URL=https://api.easyship.com

# Database Configuration (if using database)
DATABASE_URL=sqlite:///production.db

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=application.log

# Security Configuration
CORS_ORIGINS=*
RATE_LIMIT=1000 per hour

# Monitoring Configuration
ENABLE_MONITORING=true
ALERT_EMAIL=your_email@company.com
