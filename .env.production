# Production Environment Configuration
# SECURITY WARNING: Never commit this file with real values to version control

FLASK_ENV=production
FLASK_SECRET_KEY=REPLACE_WITH_SECURE_SECRET_KEY
DEBUG=false

# Database Configuration
DATABASE_URL=postgresql://postgres:REPLACE_WITH_SECURE_PASSWORD@db:5432/shipping_gui
POSTGRES_PASSWORD=REPLACE_WITH_SECURE_PASSWORD

# Redis Configuration
REDIS_URL=redis://redis:6379/0
REDIS_PASSWORD=REPLACE_WITH_SECURE_REDIS_PASSWORD

# External API Keys
VEEQO_API_KEY=REPLACE_WITH_PRODUCTION_VEEQO_KEY
VEEQO_API_URL=https://api.veeqo.com

EASYSHIP_API_KEY=REPLACE_WITH_PRODUCTION_EASYSHIP_KEY
EASYSHIP_API_URL=https://api.easyship.com

# Hugging Face
HF_TOKEN=REPLACE_WITH_PRODUCTION_HF_TOKEN

# Internal API Security
INTERNAL_API_KEY=REPLACE_WITH_PRODUCTION_INTERNAL_KEY
CLIENT_API_KEYS=REPLACE_WITH_PRODUCTION_CLIENT_KEYS

# Logging Configuration
LOG_LEVEL=INFO
LOG_TO_STDOUT=true
LOG_FILE=/app/logs/production.log

# Application Settings
MAX_CONTENT_LENGTH=16777216
UPLOAD_FOLDER=/app/uploads

# External API Settings
API_TIMEOUT=30
API_MAX_RETRIES=3
API_BACKOFF_FACTOR=0.3

# Rate Limiting
RATELIMIT_DEFAULT=100 per hour
RATELIMIT_HEADERS_ENABLED=true

# Monitoring & Health Checks
METRICS_ENABLED=true
HEALTH_CHECK_ENABLED=true

# Production Server Settings
GUNICORN_WORKERS=4
GUNICORN_LOG_LEVEL=info
PORT=5000

# Security Settings
WTF_CSRF_ENABLED=true
SESSION_COOKIE_SECURE=true
SESSION_COOKIE_HTTPONLY=true

# SSL/TLS
SSL_KEYFILE=/etc/nginx/ssl/key.pem
SSL_CERTFILE=/etc/nginx/ssl/cert.pem

# Docker Registry
DOCKER_REGISTRY=ghcr.io/your-username

# CORS Settings
CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Slack Notifications
SLACK_WEBHOOK_URL=REPLACE_WITH_SLACK_WEBHOOK_URL